	position absolute
	top 25px
	left 10px
	width: 100%
	z-index 10

.slider-head__cat
	f()
	align-items center

.slider-head__cat-img
	size 30px
	margin-right: 10px
.slider-head__cat-text
	color white

.story-sale-img
	width: 100%

.story-sale-img--vert
	width 85vw
	max-width 270px


.story-sale-wrap
	height: 100%
	f()
	flex-flow column
	align-items center
	justify-content center

.h100-mid
	height: 100%
	f()
	flex-flow column
	align-items center
	justify-content center

.story-bonus
	padding: 20% 20px 20px 20px
	height: 100%
	f()
	flex-flow column
	align-items center
	justify-content center

.story-bonus-title
	font-size: 12vw

.story-bonus-text
	font-size: 5vw

.story-bonus-btn
	margin-top: 5vw

.scroll-item
	min-width: 300px
	margin-right: 16px
	white-space initial



.scroll-row-wrap
	overflow: auto
	margin-left: -24px
	margin-right: -24px
	padding-left: 24px
	padding-right: 12px
	padding-bottom: 24px
	display: grid
	grid-template-columns: 1fr;
	position relative
.scroll-row
	display: flex
