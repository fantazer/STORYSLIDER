@import "grid/_grid.styl"
@import 'rupture'
@import "variable/_function.styl"
@import "variable/_ie.styl"
@import "variable/_helper.styl"
@import "variable/_default.styl"
@import "variable/config/_color.styl"
@import "variable/config/_typography.styl"
@import "variable/config/_btn.styl"
@import "variable/config/_input.styl"
@import "../module/**/*"

body
	@extend .type--main
	font-family $v-font
	color $main-text-color
	line-height 1.2
	letter-spacing 0.01em
// config
$orange = #FE6B35
$purple = #982EFF
$green = #98DA3C
$greenDark = #1b9b0f
$blue = #0065BD

.bg--white
	background: white

.bg--orange
	background: $orange

.bg--purple
	background: $purple

.bg--green
	background: $green

.bg--blue
	background: $blue

.bg--greenGradient
	background: linear-gradient(133.3deg, #A4DD00 0%, #6CC100 50%, #00E175 100%);

.bg--blueGradient
	background: linear-gradient(180deg, #007BE5 0%, #6B33B2 100%);

.bg--full
	background-size cover
	background-repeat no-repeat
	background-position center center

//typography
.type--36
	font-size: 36px

.type--24
	font-size: 24px

.type--20
	font-size: 20px

.type--16
	font-size: 16px

.type--12
	font-size: 12px

.type--10
	font-size: 10px

.type--w700
	font-weight: 700

.type--center
	text-align center

.type--orange
	color $orange

.type--purple
	color $purple

.type--green
	color $green

.type--greenDark
	color $greenDark

.type--white
	color white

//input
.br-20
	br(20px)

.btn
	br(32px)
	tr(all)
	display inline-block
	background none
	border 0
	text-align: center
	position relative
	&:before
		content ''
		position absolute
		width calc(100% + 10px)
		height calc(100% + 10px)
		left -5px
		top -5px
		br(34px)
		z-index -1
	&:hover
		cursor pointer

.btn--md
	@extend .btn
	@extend .type--md
	padding 17px 48px
	font-weight: 700
	.btn-icon-row--right
		.icon
			margin-left: 16px
			margin-right: -24px
	.btn-icon-row--left
		.icon
			margin-right: 16px
			margin-left: -24px
	&.btn--full
		+below(640px)
			padding: 17px

.btn--white
	@extend .btn
	color black
	background: white
	font-weight: 700
	&:hover
		background: rgba(255, 255, 255, 0.8);
	.icon
		fill black

.btn--light
	@extend .btn
	border 1px solid $border-color
	background-color #ffffff
	.icon
		fill $mark
	&:hover,&.active
		background: $greenLight
		border 1px solid $mark
		color $mark
	&.active
		background: $greenLight
		border 1px solid $mark
		color $mark
	&:active
		&:before
			content ''
			border 2px solid $greenLight
	&.disable
		pointer-events none
		color $typeDisable!important
		.icon
			fill $typeDisable!important

//extend

.psv-24p
	padding: 24%

.psv-32p
	padding: 32%

.p-24
	padding: 24px

.psv-24
	padding-top: 24px
	padding-bottom: 24px

.psh-24
	padding-left: 24px
	padding-right: 24px

.psv-16
	padding-top: 16px
	padding-bottom: 16px

.psh-16
	padding-left: 16px
	padding-right: 16px

.mb-5
	margin-bottom: 5px

.mb-10
	margin-bottom: 10px

.mb-24
	margin-bottom: 24px

.mb-a
	margin-bottom: auto

.mt-24
	margin-top: 24px

.mt-a
	margin-top: auto

.w70
	width: 70%

.w100
	width: 100%

//helper
.overflow
	overflow hidden

.f
	display: flex

.jcc
	justify-content center

.f-column
	flex-flow column

.f-grow
	flex-grow: 1

.h100
	height: 100%

// config === end


.page
	height: 100vh
	//height calc(var(--vh, 1vh) * 100)
	overflow hidden
	background black
	flex(mid)

.page-content
	+below(640px)
		height: 100vh
	center(1280px,10)
.slider__el
	+below(640px)
		width: 100vw
		height: 100vh
		padding: 0
		&:before
			content ''
			display none
	bg-full()
	padding: 88% 20%
	//br(12px)
	tr(all)
	cp()
	margin: 0 auto
	display: block !important
	position relative
	&:before
		content ''
		position absolute
		top 0
		left 0
		width: 100%
		height: 100%
		background: #11111185
		opacity: 1
.slick-center
	+below(640px)
		transform: scale(1);
	transform: scale(1.1);
	opacity: 1 !important
	tr()
	position relative
	z-index 99
	.slider__el
		&:before
			content ''
			opacity: 0
.slider
	.slick-slide
		+below(640px)
			br(0)
		transition all .8s
		br(12px)
		overflow: hidden
	.slick-list
		+below(640px)
			padding: 0 !important
		padding: 30px 0px!important
	.slick-slide
		+below(1024px)
			margin: 0 10px
		+below(640px)
			margin: 0

		margin: 0 30px

//.slick-track
	//margin-left: -12%

.control-wrap
	+below(640px)
		z-index 999
		position fixed
		left 0
		top 0
		width: 100%
		padding: 10px
	flex(mid)
.control
	+below(640px)
		width: 100%
	width: 25%
	f()
	grid-gap 10px
.control__el
	+below(640px)
		border 1px solid #ffffff2e
	height: 4px
	br(8px)
	width: 20%
	background: #ffffff2e
	position relative
	flex-grow 1
	overflow: hidden
.control__el-progres
	position absolute
	top 0
	left 0
	background: white
	height: 100%
	transform-origin left
	&.active
		width: 100%
		animation animateWidth linear 5s
		tr(all)
	&.full
		width: 100%
		background: white
@keyframes animateWidth
	0%
		transform scaleX(0)
	100%
		transform scaleX(1)


// === убираем выделения активности при клик ===
.slick-slide
	&:hover
		outline none!important
	&:active
		outline none!important
	&:focus
		outline none!important
